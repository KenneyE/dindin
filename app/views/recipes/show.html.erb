<div class="col-md-8 col-md-offset-2 recipe recipe-show">
  <div class="text-center">
    <h1><%= @recipe.title %></h1>
    <h6>Submitted by: <%= @recipe.author.username %></h6>
    <p><%= @recipe.short_description %></p>
  </div>
  <hr>
  <h4>Ingredients Required:</h4>
  <ul>
    <% @ingredients.each do |ingredient| %>
      <li><%= link_to ingredient.name, ingredient_url(ingredient) %></li>
    <% end %>
  </ul>
  <hr>
  <h3>Instructions:</h3>
  <p><%= @recipe.body %></p>
</div>