<div class="row">
  <div class="text-center col-xs-8 col-md-offset-2">
    <h2><%= recipe.escape('title') %></h2>
    <h6>Recipe From: <a href="<%= recipe.escape('source_site_url') %>"><%= recipe.escape('source_display_name') %></a></h6>
    <% if(recipe.escape('total_time')) { %>
      <p>Total Prep Time: <%= recipe.escape('total_time') %></p>
    <% } %>
  </div>
  <div class="col-xs-2"><span data-toggle="tooltip" title="Click to <%= addOrRemove %> favorites."class="favorite-button <%= favorited %> glyphicon glyphicon-heart"></span></div>
  <div class="col-xs-12">
      <hr>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <h3>Ingredients:</h3>
    <% if(ingredientMatches.length > 0){ %>
    <h5>You have:</h5>
    <ul>
      <% _(ingredientMatches).each(function(ingredient) { %>
        <li><%= ingredient %></li>
      <% }) %>
    </ul>
    <% } %>
    <h5>You need:</h5>
      <ul>
        <% _(otherIngredients).each(function(ingredient) { %>
          <li><%= ingredient %></li>
        <% }) %>
    </ul>
  </div>
  <div class="col-md-8">
     <img src="<%= recipe.escape('large_image_url') %>" class="img img-responsive img-rounded recipe-image center-block">
  <hr>
  <h4 class="text-center">Read full instructions on <a href="<%= recipe.escape('source_recipe_url') %>" target="_blank"><%= recipe.escape('source_display_name') %>.</a></h4>
  </div>
</div>
<div class="row">
  <div class="col-md-12 credit">
    <hr>
    <p class="text-center small"><%= recipe.get('credit') %></p>
  </div>
</div>