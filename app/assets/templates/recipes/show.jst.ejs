<div class="text-center">
  <h1><%= recipe.escape('title') %></h1>
  <h6>Submitted by: <%= recipe.escape('author_name') %></h6>
  <p><%= recipe.escape('short_description') %></p>
  <hr>
</div>
  <div class="col-md-4">
    <h3>Ingredients:</h3>
    <ul>
      <% ingredients.each(function(ingredient) { %>
        <li><%= ingredient.escape('name') %></li>
      <% }) %>
    </ul>
  </div>
  <div class="col-md-8">
     <img src="<%= recipe.escape('image_url') %>" class="img img-responsive img-rounded recipe-image">
  </div>
<div class="col-md-12">
  <hr>
  <h3>Instructions:</h3>
  <div><%= marked(recipe.escape('body')) %></div>
</div>
